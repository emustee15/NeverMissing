<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.jcu.emustee15.nevermissing"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.jcu.emustee15.nevermissing.Home"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.jcu.emustee15.nevermissing.Compass"
            android:label="@string/title_activity_compass"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.jcu.emustee15.nevermissing.CreateSmallObject"
            android:label="@string/title_activity_create_small_object"
            android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="edu.jcu.emustee15.nevermissing.CreateLargeObject"
            android:label="@string/title_activity_create_large_object"
            android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="edu.jcu.emustee15.nevermissing.ViewSmallObject"
            android:label="@string/title_activity_view_small_object"
            android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="edu.jcu.emustee15.nevermissing.ViewLargeImage"
            android:label="@string/title_activity_view_large_image"
             >
        </activity>
    </application>

</manifest>
